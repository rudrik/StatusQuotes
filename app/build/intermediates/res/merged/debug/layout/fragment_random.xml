<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back">
    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layAddView"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/layBottom"
            android:layout_margin="5dp">

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="&lt;&lt;"
                android:id="@+id/btnPrevious"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@drawable/btnback"
                android:textStyle="bold"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Share"
                android:id="@+id/btnShare"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/btnback"
                />

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="&gt;&gt;"
                android:id="@+id/btnNext"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@drawable/btnback"/>

    </LinearLayout>

    <ProgressBar android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/pbFetchDataCollection"
                 android:layout_centerInParent="true"/>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layAddView"
            android:orientation="vertical"
            android:layout_above="@+id/layBottom" >

        <com.mqnvnfx.itwsdvr70223.AdView
            android:id="@+id/myAdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/F:/Rudrik/GRADLE/StatusQuotes/app/src/main/res/layout/fragment_random.xml -->